<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.radugoada.stillcam.MainActivity">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </FrameLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="75dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/ic_menu_camera"
        android:backgroundTint="@android:color/holo_red_dark"
        android:onClick="captureImage"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttonGallery"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/yawText"
        android:background="@android:drawable/ic_menu_gallery"
        android:backgroundTint="@android:color/holo_green_light" />

    <TextView
        android:id="@+id/yawText"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text=" Rotation:  "
        android:textAlignment="textStart"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/buttonGallery"
        android:layout_marginEnd="39dp"
        android:layout_toStartOf="@+id/yawText"
        android:background="@null"
        app:srcCompat="@drawable/flashoff" />

</RelativeLayout>
